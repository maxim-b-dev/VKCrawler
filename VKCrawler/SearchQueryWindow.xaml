<Window x:Class="VKCrawler.SearchQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поиск" Height="158" Width="228" MinHeight="158" MinWidth="228" MaxHeight="158" MaxWidth="228">
    <Grid>
        <TextBox x:Name="tbLastName" HorizontalAlignment="Left" Height="23" Margin="65,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top" Height="23" RenderTransformOrigin="-0.02,0.478"/>
        <TextBox x:Name="tbFirstName" HorizontalAlignment="Left" Height="23" Margin="65,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,38,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Height="23"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,66,0,0" TextWrapping="Wrap" Text="Телефон" VerticalAlignment="Top" Height="23"/>
        <TextBox x:Name="tbMobilePhone" HorizontalAlignment="Left" Height="23" Margin="65,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
        <Button x:Name="btnSearch" Content="Поиск" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="200" Height="23" Click="btnSearch_Click"/>
    </Grid>
</Window>
